<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="500">
            <Label text="Sudoku 6x6" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-alignment: center;" />

            <GridPane fx:id="sudokuGrid" hgap="5" vgap="5" alignment="CENTER" style="-fx-border-color: black;">
                <!-- Celdas generadas dinÃ¡micamente en el controlador -->
            </GridPane>

            <HBox alignment="CENTER" spacing="10">
                <Button text="Nuevo Juego" fx:id="newGameButton"/>
                <!-- <Button text="Resolver" fx:id="solveButton" onAction="#resolverSudoku" />-->
                <Button text="Reiniciar" fx:id="resetButton"/>
                <Button text="Ayuda" fx:id="helpButton"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>